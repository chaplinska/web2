extends ../../layout.pug

block prepend styles
    link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
    br
    form(id='shop-add-form' name='shop-add-form' class='form-inline' action='/addShop' method='POST')
        div(class='form-group')
            label(for='name') Name
                input(id='name' name='name' value='' class='form-control')
        div(class='form-group')
            label(for='name') Address
                input(id='address' name='address' value='' class='form-control')
        div(class='form-group')
            div(class='col-md-12')
                button(type='submit' class='btn btn-primary') Create
    hr
    each val in data
        div.singleShop
            h2= val._id
            p= 'Магазин ' + val.name
            p= ' З адресою ' + val.address
            hr
            h5 Редагування
            form(id='shop-add-form' name='shop-add-form' class='form-inline' action=`/editShop/${val._id}` method='POST')
                div(class='form-group')
                    div
                        label(for='name') New Name
                        input(id='name' name='name' value='' class='form-control')

                    div
                        label(for='name') New Address
                        input(id='address' name='address' value='' class='form-control')
                    button(type='submit' class='btn btn-primary') Edit
            br
            form(id='shop-add-form' name='shop-add-form' class='form-inline' action=`/deleteBtId/${val._id}` method='POST')
                span
                    button(type='submit'  class='btn btn-primary') Delete
            hr
