extends ../layout.pug

block prepend styles
    link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
    div(class='breadcrumb')
        li Додавання складу в колекцію
    form(id='shop-add-form' name='shop-add-form' class='form-inline' action='/addStorage' method='POST')
        div(class='form-group')
            div(class='col-md-3')
                label(for='name') Number
            div(class='col-md-9')
                input(id='name' name='number' value='' class='form-control')
        div(class='form-group')
            div(class='col-md-3')
                label(for='name') Magazine
            div(class='col-md-9')
                select(name = 'index')
                    each val, index in dataShop
                        option= index + '. Назва: ' + val.name + '. Адреса: ' + val.address
        div(class='form-group')
            div(class='col-md-3')
                label(for='name') Capacity
            div(class='col-md-9')
                input(id='' name='capacity' value='' class='form-control')
        div(class='form-group')
            div(class='col-md-12')
                button(type='submit' class='btn btn-primary') Create
        h3= info
    br
    div(class='breadcrumb')
        li Редагування складу в колекції
    form(id='shop-edit-form' name='shop-add-form' class='form-inline' action='/editStorage' method='POST')
        div(class='')
            div(class='col-md-3')
                label(for='') Storage
            div(class='col-md-6')
                select#OurShipEdit(name = 'index')
                    each val, index in data
                        option= index + '. Номер: ' + val.number + '. Maгазин: ' + val.magazine.name + '. Місткість: ' + val.capacity
        div
            div(class='form-group')

                div(class='col-md-3')
                    label(for='name') New Magazine
                div(class='col-md-9')
                    select(name = 'indexShop')
                        each val, index in dataShop
                            option= index + '. Назва: ' + val.name + '. Адреса: ' + val.address
            div(class='form-group')
                div(class='col-md-3')
                    label(for='name') New capacity
                div(class='col-md-9')
                    input( name='capacity' value='' class='form-control')
            div(class='form-group')
                div(class='col-md-12')
                    button(type='submit' class='btn btn-primary') Edit
            h4= edit

    div(class='breadcrumb')
        li Видалення складу з колекції
    form(id='shop-delete-form' name='shop-add-form' class='form-inline' action='/deleteStorage' method='POST')
        div(class='')
            div(class='col-md-3')
                label(for='') Shop
            div(class='col-md-6')
                select(name = 'index')
                    each val, index in data
                        option= index + '. Номер: ' + val.number + '. Maгазин: ' + val.magazine.name + '. Місткість: ' + val.capacity
                button(type='submit' class='btn btn-primary') Delete
                p= delets

    div(class='breadcrumb')
        li Пошук складу в колекції
    form(id='shop-find-form' name='shop-add-form' class='form-inline' action='/findStorage' method='POST')
        div(class='')
            div(class='form-group')

                div(class='col-md-3')
                    label(for='name') Number
                div(class='col-md-9')
                    input( name='number' value='' class='form-control')

            div(class='form-group')
                div(class='col-md-12')
                    button(type='submit' class='btn btn-primary') Find
            p= find
block append scripts
    script(src='/static/js/models/shop.js')
    script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='/static/js/views/shop.js')
